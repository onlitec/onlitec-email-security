# Onlitec Email Protection - Multi-Tenant Configuration
# Copie este arquivo para .env e ajuste conforme necessário

# ======================
# DATABASE CONFIGURATION
# ======================
POSTGRES_DB=emailprotect
POSTGRES_USER=emailprotect
POSTGRES_PASSWORD=changeme123
# IMPORTANTE: Altere a senha em produção!

# ======================
# MAIL SERVER SETTINGS
# ======================
MAIL_HOSTNAME=mail.onlitec.local
MAIL_DOMAIN=onlitec.local

# TLS/SSL Certificates
TLS_CERT_FILE=/etc/postfix/certs/cert.pem
TLS_KEY_FILE=/etc/postfix/certs/key.pem

# ======================
# RSPAMD SETTINGS
# ======================
RSPAMD_PASSWORD=changeme123
# Senha para acessar a interface web do Rspamd

# ======================
# CLAMAV SETTINGS
# ======================
CLAMAV_NO_FRESHCLAM=false
# Se true, desabilita atualização automática de signatures

# ======================
# WEB PANEL SETTINGS
# ======================
NODE_ENV=production
# Valores possíveis: development, production

# Security Keys (MUDE EM PRODUÇÃO!)
JWT_SECRET=your-super-secret-jwt-key-change-me-$(openssl rand -hex 32)
SESSION_SECRET=your-super-secret-session-key-change-me-$(openssl rand -hex 32)

# Admin Credentials
ADMIN_EMAIL=admin@onlitec.local
ADMIN_PASSWORD=changeme123!
# IMPORTANTE: Troque imediatamente após primeiro login!

# ======================
# MULTI-TENANT SETTINGS
# ======================
# Default Spam Thresholds
DEFAULT_GREYLISTING_SCORE=4.0
DEFAULT_ADD_HEADER_SCORE=5.0
DEFAULT_REJECT_SCORE=15.0

# Quarantine
QUARANTINE_RETENTION_DAYS=30
QUARANTINE_MAX_SIZE_MB=10240

# Rate Limiting
DEFAULT_MAX_EMAILS_PER_HOUR=100
DEFAULT_MAX_RECIPIENTS_PER_EMAIL=50

# ======================
# MONITORING & LOGS
# ======================
LOG_LEVEL=info
# Valores: debug, info, warn, error

ENABLE_METRICS=true
METRICS_PORT=9090

# ======================
# BACKUP SETTINGS
# ======================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/backups

# ======================
# NETWORK SETTINGS
# ======================
# Deixe em branco para usar as portas padrão
# PORT_SMTP=25
# PORT_SUBMISSION=587
# PORT_SMTPS=465
# PORT_PANEL=9080

# ======================
# EXTERNAL INTEGRATIONS
# ======================
# Prometheus (opcional)
PROMETHEUS_ENDPOINT=http://prometheus:9090

# Grafana (opcional)
GRAFANA_ENDPOINT=http://grafana:3000

# Alertmanager (opcional)
ALERTMANAGER_ENDPOINT=http://alertmanager:9093
