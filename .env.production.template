# =============================================================================
# PRODUCTION ENVIRONMENT - Portainer Stack
# =============================================================================
# Configure these values in Portainer Stack Environment Variables
# DO NOT commit this file with real production values!

APP_ENV=production
NODE_ENV=production

# URLs (use your production domains)
APP_URL=https://email.yourdomain.com
API_URL=https://email.yourdomain.com

# Database (use strong generated passwords)
POSTGRES_HOST=onlitec_emailprotect_db
POSTGRES_PORT=5432
POSTGRES_DB=emailprotect
POSTGRES_USER=emailprotect
POSTGRES_PASSWORD=GENERATE_STRONG_PASSWORD_HERE

# Redis
REDIS_HOST=onlitec_redis
REDIS_PORT=6379
REDIS_PASSWORD=GENERATE_STRONG_PASSWORD_HERE

# Security (MUST be generated fresh for production)
# Generate with: openssl rand -hex 64
JWT_SECRET=GENERATE_64_CHAR_SECRET_HERE
SESSION_SECRET=GENERATE_64_CHAR_SECRET_HERE

# Admin (change immediately after first login)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=CHANGE_IMMEDIATELY_AFTER_LOGIN

# Mail Server
MAIL_HOSTNAME=mail.yourdomain.com
MAIL_DOMAIN=yourdomain.com
TLS_CERT_FILE=/etc/postfix/certs/cert.pem
TLS_KEY_FILE=/etc/postfix/certs/key.pem

# Rspamd
RSPAMD_PASSWORD=GENERATE_STRONG_PASSWORD_HERE

# ClamAV
CLAMAV_NO_FRESHCLAM=false

# CORS (production domain only)
CORS_ORIGIN=https://email.yourdomain.com

# Logging
LOG_LEVEL=info

# Docker Image (for Portainer webhook deployments)
IMAGE_TAG=latest
